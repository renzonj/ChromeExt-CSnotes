{
  "manifest_version": 3,
  "name": "Sidebar Notes",
  "version": "1.0",
  "description": "A sidebar note-taking extension with tabs",
  "permissions": [
    "storage",
    "sidePanel",
    "clipboardWrite"
  ],
  "action": {
    "default_title": "Open Sidebar Notes"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+B",
        "mac": "Command+B"
      },
      "description": "Open Sidebar Notes"
    }
  },
  "side_panel": {
    "default_path": "sidebar.html"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
